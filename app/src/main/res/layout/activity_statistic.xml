<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".StatisticActivity">


    <Button
        android:id="@+id/buttonStartDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="218dp"
        android:onClick="selectStartDate"
        android:text="Начальная дата" />

    <Button
        android:id="@+id/buttonEndDate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="229dp"
        android:layout_marginTop="16dp"
        android:onClick="selectEndDate"
        android:text="Конечная дата" />

    <Button
        android:id="@+id/buttonShowStatistics"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/buttonStartDate"
        android:layout_marginTop="16dp"
        android:layout_centerHorizontal="true"
        android:text="Показать статистику"
        android:onClick="showStatistics" />

</RelativeLayout>